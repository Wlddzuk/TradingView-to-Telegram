{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "@vercel/python@4.0.0",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/tv-webhook",
      "dest": "/api/webhook"
    },
    {
      "src": "/api/v1/tv-webhook", 
      "dest": "/api/webhook"
    },
    {
      "src": "/api/telegram-webhook",
      "dest": "/api/telegram_webhook"
    },
    {
      "src": "/healthz",
      "dest": "/api/health"
    },
    {
      "src": "/readyz",
      "dest": "/api/health?check=ready"
    },
    {
      "src": "/",
      "dest": "/api/health?info=true"
    }
  ],
  "env": {
    "PYTHONPATH": "./"
  }
}