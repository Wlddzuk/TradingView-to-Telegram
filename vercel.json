{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/tv-webhook",
      "dest": "/api/webhook"
    },
    {
      "src": "/api/v1/tv-webhook", 
      "dest": "/api/webhook"
    },
    {
      "src": "/api/telegram-webhook",
      "dest": "/api/telegram_webhook"
    },
    {
      "src": "/healthz",
      "dest": "/api/health"
    },
    {
      "src": "/readyz",
      "dest": "/api/health?check=ready"
    },
    {
      "src": "/",
      "dest": "/api/health?info=true"
    }
  ],
  "env": {
    "PYTHONPATH": "./"
  }
}